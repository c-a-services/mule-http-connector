    <modelVersion>4.0.0</modelVersion>

    <groupId>org.mule.connectors</groupId>
    <artifactId>mule-http-connector-functional-tests</artifactId>
    <packaging>jar</packaging>
    <version>1.8.0-SNAPSHOT</version>

    <name>HTTP Connector Functional Test Cases</name>

    <properties>
        <javaModuleName>org.mule.connectors.http.tests.functional</javaModuleName>

        <skipExportTests>false</skipExportTests>
        <formatterConfigPath>../formatter.xml</formatterConfigPath>

        <muleHttpServiceTestVersion>1.7.0-SNAPSHOT</muleHttpServiceTestVersion>
        <mule.version>4.5.0-SNAPSHOT</mule.version>
        <muleWeaveServiceVersion>2.5.0-SNAPSHOT</muleWeaveServiceVersion>
        <muleSocketsConnectorVersion>1.2.2</muleSocketsConnectorVersion>
        <muleCorsKernelVersion>1.1.2</muleCorsKernelVersion>
        <scriptingModuleVersion>1.1.7</scriptingModuleVersion>

        <fluentHcVersion>4.5.13</fluentHcVersion>
        <javaxActivationVersion>1.2.0</javaxActivationVersion>
        <javaxMailVersion>1.6.2</javaxMailVersion>
        <jettyVersion>9.4.39.v20210325</jettyVersion>
        <grizzlyVersion>2.3.36-MULE-024</grizzlyVersion>
        <grizzlyAhcVersion>1.14-MULE-019</grizzlyAhcVersion>
        <httpAsyncClientVersion>4.1.4</httpAsyncClientVersion>
        <httpMimeVersion>4.5.13</httpMimeVersion>
        <commonsLangVersion>3.12.0</commonsLangVersion>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.22.2</version>
                <configuration>
                    <systemPropertyVariables>
                        <maven.projectVersion>${mule.version}</maven.projectVersion>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- Test target -->
        <dependency>
            <groupId>org.mule.connectors</groupId>
            <artifactId>mule-http-connector</artifactId>
            <classifier>mule-plugin</classifier>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- Needed?-->
        <dependency>
            <groupId>org.mule.connectors</groupId>
            <artifactId>mule-sockets-connector</artifactId>
            <classifier>mule-plugin</classifier>
            <version>${muleSocketsConnectorVersion}</version>
            <scope>test</scope>
        </dependency>

        <!-- Test dependencies -->
